{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [ "src/**/*" ],
  "hooks": [ "copy-files" ]
}